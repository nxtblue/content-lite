{
  "name": "@nxtblue/content-lite",
  "version": "1.1.0",
  "description": "A lightweight, type-safe content loader for static sites using JSON and Markdown/MDX",
  "keywords": [
    "content",
    "json",
    "markdown",
    "mdx",
    "static-site",
    "type-safe",
    "cms",
    "nextjs",
    "next",
    "react",
    "vite",
    "astro",
    "remix"
  ],
  "homepage": "https://github.com/nxtblue/content-lite#readme",
  "bugs": {
    "url": "https://github.com/nxtblue/content-lite/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxtblue/content-lite.git"
  },
  "license": "MIT",
  "author": "NXTBlue Vortex",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.0.0",
    "vitest": "^2.1.8",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "email": "info@nxtblue.com",
  "url": "https://github.com/nxtblue/content-lite",
  "sideEffects": false
}
